<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_add_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg"
        >
    <com.gersion.superlock.view.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <TextView
            android:text="   为了保证您的密码安全，导入旧密码数据时需要设置备份密码时的超级密码，以免导入旧的密码数据失败！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_b0"
            android:textSize="15sp"
            android:padding="10dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

        <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/cetv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="超级密码"
                android:textColor="@color/gray_d0"
                android:textColorHint="@color/gray_b0"
                android:background="@drawable/shape_pwd_bg"
                android:padding="15dp"
                />

        <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/cetv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="确认密码"
                android:textColor="@color/gray_d0"
                android:textColorHint="@color/gray_b0"
                android:background="@drawable/shape_pwd_bg"
                android:padding="15dp"
                />
        <RadioGroup
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape_pwd_bg"
                android:padding="10dp"
                >
            <RadioButton
                    android:layout_weight="1"
                    android:text="从备份导入"
                    android:textSize="15sp"
                    android:checked="true"
                    android:textColor="@color/gray_b0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/checkbox_bg"
                    />
            <RadioButton
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="从文件导入"
                    android:textColor="@color/gray_b0"
                    android:button="@null"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/checkbox_bg"
                    />
        </RadioGroup>
        <RadioGroup
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_pwd_bg"
                android:padding="10dp"
                >
            <RadioButton
                    android:text="只导入不同的数据"
                    android:textSize="15sp"
                    android:checked="true"
                    android:textColor="@color/gray_b0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/checkbox_bg"
                    />
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:text="导入所有数据"
                    android:textColor="@color/gray_b0"
                    android:button="@null"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/checkbox_bg"
                    />
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:text="导入所有数据并且清除当前数据"
                    android:textColor="@color/gray_b0"
                    android:button="@null"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/checkbox_bg"
                    />
        </RadioGroup>
        <TextView
                android:id="@+id/tv_commit"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_confirm_bg"
                android:gravity="center"
                android:padding="15dp"
                android:text="导入"
                android:textColor="#fff"
                android:textSize="18sp"
                />
    </LinearLayout>

</LinearLayout>
