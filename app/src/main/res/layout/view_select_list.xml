<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/shape_select_list_bg"
        >
    <TextView
            android:id="@+id/tv_title"
            android:text="密码列表"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/font_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/item_font_grey"
            />
    <LinearLayout
            android:id="@+id/ll_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
        <TextView
                android:text="密码管家开启了密码登录，需要输入密码或者指纹以确认您是否有权限查看密码"
                android:textColor="@color/font_color"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        <EditText
                android:id="@+id/et_pwd"
                android:layout_marginTop="30dp"
                android:hint="请输入登录密码"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawablePadding="5dp"
                android:textColorHint="@color/gray_a0"
                android:textColor="@color/font_color"
                android:inputType="textPassword"
                android:drawableBottom="@drawable/shape_et_line_blue"
                />
    </LinearLayout>
    <com.gersion.superlock.view.smartRecycleView.SmartRecycleView
            android:layout_margin="10dp"
            android:visibility="gone"
            android:id="@+id/smartRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</LinearLayout>
