<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp"
        >
    <ImageView
            android:id="@+id/iv_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    <TextView
            android:id="@+id/title_bar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="TITLE"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            />

    <View
            android:id="@+id/v_top_card"
            android:visibility="visible"
            android:layout_width="427dp"
            android:layout_height="122dp"
            android:layout_below="@+id/title_bar"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.097"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            />

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon"
            android:layout_centerHorizontal="true"
            android:textColor="#5b5b5b"
            android:textSize="50sp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            />


    <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:src="@mipmap/status_ok"
            android:visibility="invisible"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.983"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />
    <com.dingmouren.paletteimageview.PaletteImageView
            android:id="@+id/piv_icon"
            app:cornerRadis="10dp"
            app:paletteSrc="@mipmap/yellow"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.111"
            app:layout_constraintTop_toTopOf="@+id/v_top_card"
            app:layout_constraintHorizontal_bias="0.587"
            />
    <LinearLayout
            android:id="@+id/layout_about"
            android:layout_width="350dp"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.855"
            app:layout_constraintTop_toTopOf="parent"
            >

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_outline_blue_400_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="#446880"
                android:textSize="16sp"
                />

        <TextView
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_vpn_key_blue_400_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="#446880"
                android:textSize="16sp"
                />

        <TextView
                android:text="历史记录"
                android:drawableLeft="@drawable/ic_history_blue_400_24dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <com.gersion.superlock.view.smartRecycleView.SmartRecycleView
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/shape_boarder_grey"
                android:id="@+id/smartRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>