<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        >
    <ImageView
            android:id="@+id/iv_bg"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    <com.gersion.superlock.view.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <View
            android:layout_below="@id/titleView"
            android:id="@+id/v_top_card"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

    <com.dingmouren.paletteimageview.PaletteImageView
            android:id="@+id/piv_icon"
            app:cornerRadis="10dp"
            android:layout_alignBottom="@id/v_top_card"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            app:paletteSrc="@mipmap/ic_launcher"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
    <TextView
            android:text="淘宝"
            android:layout_toRightOf="@id/piv_icon"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@id/v_top_card"
            android:layout_marginBottom="90dp"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon"
            android:textColor="@color/item_font_grey"
            android:textSize="30sp"
            />
    <ImageView
            android:id="@+id/iv_del"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/del"
            android:background="@drawable/shape_guide_bg"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            />
    <LinearLayout
            android:layout_below="@id/v_top_card"
            android:layout_above="@id/iv_del"
            android:layout_margin="15dp"
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible"
            >

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_outline_blue_400_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/font_color"
                android:textSize="16sp"
                />

        <TextView
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_vpn_key_blue_400_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/font_color"
                android:textSize="16sp"
                />

        <TextView
                android:text="历史记录"
                android:drawableLeft="@drawable/ic_history_blue_400_24dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <com.gersion.superlock.view.smartRecycleView.SmartRecycleView
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/shape_boarder_grey"
                android:id="@+id/smartRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
    </LinearLayout>

</RelativeLayout>