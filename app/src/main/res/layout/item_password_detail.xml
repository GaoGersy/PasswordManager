<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="1200pt"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
    <LinearLayout
            android:id="@+id/container"
            android:layout_width="600pt"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/shape_pwd_detail_bg"
            >
        <TextView
                android:id="@+id/tv_address"
                android:text="Homeasdfa"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/item_detail_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <TextView
                android:id="@+id/tv_name"
                android:text="Homeasdfa"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/item_detail_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <TextView
                android:id="@+id/tv_password"
                android:text="Homeasdfa"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/item_detail_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <TextView
                android:id="@+id/tv_notes"
                android:text="Homeasdfa"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/item_detail_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <com.gersion.superlock.view.DynamicDataView
                android:id="@+id/dynamicDataView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
    </LinearLayout>
</FrameLayout>