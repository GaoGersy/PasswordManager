<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >
        <ImageView
                android:id="@+id/piv_icon"
                android:src="@mipmap/yellow"
                android:scaleType="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
        <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_title"
                    android:text="名称"
                    android:textSize="@dimen/content_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_name"
                    android:text="名称"
                    android:textSize="@dimen/content_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_password"
                    android:text="名称"
                    android:textSize="@dimen/content_list_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
        <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_touch"
                android:src="@drawable/ic_menu_blue_400_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
    </LinearLayout>

</android.support.v7.widget.CardView>