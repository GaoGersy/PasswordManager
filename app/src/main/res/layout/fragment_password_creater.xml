<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20202B"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

    <TextView
            android:id="@+id/activity_main_key"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/widow"
            android:gravity="center"
            android:paddingTop="-10dp"
            android:paddingBottom="10dp"
            android:text="密码在这里哟"
            android:textColor="#A7A8AA"
            android:textSize="15sp"/>
    <ImageView
            android:layout_marginTop="300dp"
            android:id="@+id/activity_main_start"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_press"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="200dp"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/act_ll"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
        <com.gersion.superlock.view.Croller
                android:id="@+id/croller"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                app:back_circle_color="#000"
                app:indicator_color="#ff9900"
                app:indicator_width="3"
                app:progress_primary_circle_size="10"
                app:progress_secondary_circle_size="5"
                app:is_continuous="false"
                app:label_color="#b0b0b0"
                app:label_size="20"
                app:label="密码长度"
                app:main_circle_color="#211F22"
                app:max="20"
                app:progress_text_size="30"
                app:progress_text_color="#ff9900"
                app:progress="6"
                app:progress_primary_color="#ff9900"
                app:progress_secondary_color="#070508" />
        <SeekBar
                android:layout_gravity="center"
                android:id="@+id/activity_main_btn_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:progress="6"/>

        <TextView
                android:id="@+id/activity_main_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="要基本原则"
                android:textColor="#A5A6A8"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/act_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center">

        <ImageView
                android:id="@+id/activity_main_btn_lower"
                style="@style/ButtonStyle"
                android:layout_marginLeft="0dp"/>

        <ImageView
                android:id="@+id/activity_main_btn_capital"
                style="@style/ButtonStyle"/>

        <ImageView
                android:id="@+id/activity_main_btn_number"
                style="@style/ButtonStyle"/>

        <ImageView
                android:id="@+id/activity_main_btn_char"
                style="@style/ButtonStyle"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-15dp"
            android:gravity="center">

        <TextView
                style="@style/TextStyle"
                android:text="小写字母"/>

        <TextView
                style="@style/TextStyle"
                android:text="大写字母"/>

        <TextView
                style="@style/TextStyle"
                android:text="数字"/>

        <TextView
                style="@style/TextStyle"
                android:text="特殊字符"/>
    </LinearLayout>


</RelativeLayout>
