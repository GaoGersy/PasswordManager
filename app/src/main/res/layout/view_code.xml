<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
                android:id="@+id/tv_notice"
                android:text="请输入pin码"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                />
        <com.gersion.superlock.view.codeview.CodeView
                android:id="@+id/password_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#66ffffff"
                app:borderColor="#bebebe"
                app:borderWidth="2px"
                app:dividerColor="#eeeeee"
                app:dividerWidth="2px"
                app:codeColor="@color/confirm"
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                />
    </LinearLayout>
    <com.gersion.superlock.view.codeview.KeyboardView
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="bottom"
            />
</FrameLayout>