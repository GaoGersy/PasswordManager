<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--ToggleButtonView-->
    <declare-styleable name="ToggleButtonView">
        <attr name="state" format="boolean" />
    </declare-styleable>
    <!--ToggleButton-->
    <declare-styleable name="MyToggleButton">
        <attr name="switchState" format="boolean" />
        <attr name="stateOnSrc" format="reference" />
        <attr name="stateOffSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="tbBorderWidth" format="dimension"/>
        <attr name="tbOffBorderColor" format="reference|color"/>
        <attr name="tbOffColor" format="reference|color"/>
        <attr name="tbOnColor" format="reference|color"/>
        <attr name="tbSpotColor" format="reference|color"/>
        <attr name="tbAnimate" format="reference|boolean"/>
        <attr name="tbAsDefaultOn" format="reference|boolean"/>
    </declare-styleable>


    <!--SlideButtonView-->
    <declare-styleable name="SlideButtonView">
        <attr name="status" format="boolean" />
    </declare-styleable>

    <!--CirecleMenuView-->
    <declare-styleable name="CirecleMenuView">
        <attr name="cmvText" format="string|reference" />
    </declare-styleable>
    <!--CheckedEditTextView-->
    <declare-styleable name="CheckedEditTextView">
        <attr name="lable" format="string|reference" />
        <attr name="hasStatuBar" format="boolean" />
        <attr name="lableColor" format="color" />
        <attr name="lableSize" format="dimension" />
        <attr name="editTextBg" format="reference" />
    </declare-styleable>

    <declare-styleable name="Croller">
        <attr name="progress" format="integer" />
        <attr name="label" format="string" />
        <attr name="back_circle_color" format="color" />
        <attr name="main_circle_color" format="color" />
        <attr name="indicator_color" format="color" />
        <attr name="progress_primary_color" format="color" />
        <attr name="progress_secondary_color" format="color" />
        <attr name="label_size" format="integer" />
        <attr name="label_color" format="color" />
        <attr name="indicator_width" format="float" />
        <attr name="is_continuous" format="boolean" />
        <attr name="progress_primary_circle_size" format="float" />
        <attr name="progress_secondary_circle_size" format="float" />
        <attr name="progress_primary_stroke_width" format="float" />
        <attr name="progress_secondary_stroke_width" format="float" />
        <attr name="sweep_angle" format="integer" />
        <attr name="start_offset" format="integer" />
        <attr name="max" format="integer" />
        <attr name="main_circle_radius" format="float" />
        <attr name="back_circle_radius" format="float" />
        <attr name="progress_radius" format="float" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_size" format="integer" />
    </declare-styleable>
</resources>
